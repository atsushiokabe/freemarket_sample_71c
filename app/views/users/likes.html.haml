.header-main
  = render partial: "/layouts/main_header"

.bread-crumb
  %ul.bread-crumb__nav
    %li.bread-crumb__nav__item
      = link_to root_path, class: "bread-crumb__nav__item--link" do
        %span フリマ
      = icon('fas', 'chevron-right', class: "bread-crumb__nav__item--icon")
      = link_to user_path(current_user.id), class: "bread-crumb__nav__item--link present-location" do
        %span マイページ

.mypage-main
  = render "side-bar"
  .right-content
    = render "user-info"
    .mypage-tab-container
      %h2.mypage-tab-head いいね一覧
      .like-content
        %ul.like-lists
          - current_user.liked_items.each do |item|
            %li
              = link_to item_path(item.id), class: "sammary" do
                .item-image
                  = image_tag item.images[0].image.url, alt: "sample", class: "sample"
                .caption
                  = item.name
                  %br
                  = number_to_currency(item.price,format: "%u%n", unit: "¥")
                = icon('fas', 'angle-right', class: "nav__list__box--item--icon")

%aside.banner-for-app
  .banner-inner
    %h2.banner-inner__title
      だれでもかんたん、人生を変えるフリマアプリ
    %p.banner-inner__text
      今すぐ無料ダウンロード！
    .inner-icons
      = link_to image_tag("/images/appstore-icon.png",alt:"appstore",class:"icon-image"),"#",class:"icon-left"
      = link_to image_tag("/images/googlestore-icon.png",alt:"googleplay",class:"icon-image"),"#",class:"icon-right"

.main-footer
  = render partial: "/layouts/main-footer"

= link_to new_item_path do
  .sell-btn
    %span.sell-btn__text 出品
    = image_tag("/images/icon_camera.png", alt: "CAMERA", class: "sell-btn__image")