- @comments.each do |comment|
  - unless comment.id.nil?
    - if comment.user == current_user
      .comment-box
        %p.right-comment
          = comment.comment
        %span
          = link_to "#{comment.user.nickname}", user_path(comment.user.id), class: "comment-user-myself"
      = link_to "コメントを削除する", item_comment_path(comment.item_id, comment.id), method: :delete, remote: true, class: "comment-delete"
    - else
      .other-comment-box
        = link_to "#{comment.user.nickname}さん", user_path(comment.user.id), class: "comment-user-other"
        %span.left-comment
          = comment.comment