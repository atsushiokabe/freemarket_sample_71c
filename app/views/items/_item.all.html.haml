- @items.each do |item|
  %li.items-lists__each
    .item-sammary
      = link_to item_path(item.id),class:"sammary" do
        %figure.item-image
          .image-thumbnail
            %span.price
              = number_to_currency(item.price,format: "%u%n",unit: "Â¥")
            = image_tag item.images[0].image.url,alt:"sample",class:"sample"
          %figcaption.caption
            %span.line
              = item.name.truncate(22)
            .like-count
              = icon("far","heart")
              %span.item-box-likes__number
                0
= paginate(@items)
