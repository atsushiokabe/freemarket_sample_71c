        %li.contents-list__each
          = link_to "ポイントに関する特約","#",class:"company-sammary"
    %li.contents-container__lists
      %h2.contents-head
        FURIMAを見る
      %ul.contents-list
        %li.contents-list__each
          = link_to "カテゴリー一覧","#",class:"company-sammary"
        %li.contents-list__each
          = link_to "ブランド一覧","#",class:"company-sammary"
    %li.contents-container__lists
