.header-main
  = render partial: "/layouts/main_header"

- breadcrumb :registered_card
= render "/layouts/bread-crumbs"

.mypage-main
  = render "/users/side-bar"
  .right-content
    %section.card-container
      %h2.card-container__head 支払い方法
      .card-container__inner
        .payment-list
          .payment-list__content
            %h3.sub-head 登録クレジットカード
          .payment-info
            .card-list
              .card-list-image
                = image_tag "/images/#{@card_src}", class: "credit_card_info__brand__img", alt: @card_brand, width:"50px",height:"40px"
            .card-number 
              = "**** **** **** " + @default_card_information.last4
            .expire-date 
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
        .delete-card
          = link_to "削除する",credit_card_path(current_user.id), method: :delete,class: "delete-card-link"


%aside.banner-for-app
  .banner-inner
    %h2.banner-inner__title
      だれでもかんたん、人生を変えるフリマアプリ
    %p.banner-inner__text
      今すぐ無料ダウンロード！
    .inner-icons
      = link_to image_tag("/images/appstore-icon.png",alt:"appstore",class:"icon-image"),"#",class:"icon-left"
      = link_to image_tag("/images/googlestore-icon.png",alt:"googleplay",class:"icon-image"),"#",class:"icon-right"

.main-footer
  = render partial: "/layouts/main-footer"

= link_to new_item_path do
  .sell-btn
    %span.sell-btn__text 出品
    = image_tag("/images/icon_camera.png", alt: "CAMERA", class: "sell-btn__image")